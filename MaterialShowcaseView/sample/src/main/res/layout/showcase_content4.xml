<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_box"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:paddingLeft="5dp"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y420"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/x32"
        tools:text="设置"
        tools:textColor="@android:color/black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_content"
        android:layout_marginTop="@dimen/y32"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dismiss"
            android:layout_width="@dimen/x208"
            android:layout_height="@dimen/x64"
            android:layout_centerHorizontal="true"
            android:background="@drawable/showcase_got_it_bg"
            android:clickable="true"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/x28"
            android:visibility="visible"
            tools:text="我知道了"
            tools:textColor="@android:color/black" />

        <ImageView
            android:layout_width="@dimen/x90"
            android:layout_height="@dimen/y70"
            android:layout_below="@id/tv_dismiss"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/x235"
            android:layout_marginTop="@dimen/y22"
            android:src="@drawable/icon_tip_horizontal_left_arrow" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_skip"
        android:layout_width="@dimen/x360"
        android:layout_height="@dimen/x80"
        android:background="@drawable/showcase_skip_bg"
        android:clickable="true"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/x120"
        android:textColor="@android:color/white"
        android:textSize="@dimen/x28"
        android:visibility="visible"
        tools:text="跳过"
        tools:textColor="@android:color/black" />

</RelativeLayout>